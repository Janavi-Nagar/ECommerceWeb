<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h3>Cart Page</h3>
    
    <table class="table table-bordered" cellpadding="2" cellspacing="2">
        <tr>
            <th>option</th>
            <th>ProductName</th>
            <th>ProductPicture</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>
        @foreach (var item in ViewBag.cart)
        {
            <tr><td><a asp-controller="cart" asp-action="remove" asp-route-id="@item.Products.ProductId">
                            <button class="btn btn-success" onclick="return confirm('Are you sure you want to delete?')">Remove</button></a></td>
                <td>@item.Products.ProductName</td>
                <td><img src="~/images/@item.Products.ProductPicture" width="60" /> </td>
                <td>@item.Products.Price</td>
                <td>@item.Quantity</td>
                <td>@(item.Products.Price * item.Quantity)</td>
            </tr>
        }
        <tr>
            <td align="right" colspan="5">Sum</td>
            <td>
                @ViewBag.total
            </td>
        </tr>
    </table>
    <br>
    <a asp-controller="Home" asp-action="index"><button type="button" class="btn btn-success">Continue Shopping</button></a>
    <a asp-controller="Checkout" asp-action="Checkout"><button type="button" class="btn btn-success">Checkout</button></a>
</body>
</html>