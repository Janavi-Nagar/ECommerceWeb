@model ECommerceWeb.Models.ViewModels.CheckoutViewModel



<h4 class="mb-3">Billing address</h4>
<form class="needs-validation" asp-controller="CartCheckout" asp-action="Checkout" id="CartCheckout">
    <div class="row g-3">
        <div class="col-sm-6">
            <label class="form-label">First name</label>
            <input asp-for="@Model.FirstName" type="text" class="form-control" id="firstName" placeholder="" value="@Model.FirstName">
            <input asp-for="discountamount" type="text" class="form-control" id="discountamount" placeholder="" value="0" hidden>
            <input asp-for="grossamount" type="text" class="form-control" id="grossamount" placeholder="" value="0" hidden>
            <input asp-for="discount" type="text" class="form-control" id="discount" placeholder="" value="0" hidden>
            <input asp-for="Net" type="text" class="form-control" id="Net" placeholder="" value="0" hidden>
            <input asp-for="CartDetails" type="text" class="form-control" id="CartDetails" placeholder="" value="" hidden>
            <div class="invalid-feedback">
                Valid first name is required.
            </div>
        </div>

        <div class="col-sm-6">
            <label for="lastName" class="form-label">Last name</label>
            <input asp-for="@Model.LastName" type="text" class="form-control" id="lastName" placeholder="" value="@Model.LastName">
            <div class="invalid-feedback">
                Valid last name is required.
            </div>
        </div>

        <div class="col-12">
            <label for="address" class="form-label">Address</label>
            <input asp-for="@Model.Address" type="text" class="form-control" required="">
            <div class="invalid-feedback">
                Please enter your shipping address.
            </div>
        </div>
        <div class="col-12">
            <label for="address" class="form-label">City</label>
            <input asp-for="@Model.City" type="text" class="form-control" required="">
            <div class="invalid-feedback">
            </div>
            <div class="row">
                <div class="col-md-5">
                    <label asp-for="@Model.Country" class="form-label"></label>
                    <select asp-for="@Model.Country" class="form-select" id="country" required="">
                        <option value="">Country</option>
                        <option>India</option>
                    </select>
                    <div class="invalid-feedback">
                        Please select a valid country.
                    </div>
                </div>

                <div class="col-md-4">
                    <label for="state" class="form-label">State</label>
                    <select asp-for="@Model.State" class="form-select" id="state" required="">
                        <option value="">State</option>
                        <option>Assam</option>
                        <option>Ajmer</option>
                        <option>Bhopal</option>
                        <option>Delhi</option>
                        <option>Kutch</option>
                        <option>Gujarat</option>
                        <option>Kerala</option>
                        <option>Hyderabad</option>
                    </select>
                    <div class="invalid-feedback">
                        Please provide a valid state.
                    </div>
                </div>

                <div class="col-md-3">
                    <label for="zip" class="form-label">Zip</label>
                    <input asp-for="@Model.Zip" type="text" class="form-control" id="zip" placeholder="" required="">
                    <div class="invalid-feedback">
                        Zip code required.
                    </div>
                </div>
            </div>
        </div>

        <hr class="my-4">

        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="same-address">
            <label class="form-check-label" for="same-address">Shipping address is the same as my billing address</label>
        </div>
        <button class="w-100 btn btn-success btn-lg" type="button" onclick="PaymentProcess()">Continue to Payment</button>
</form>

<script>
    function PaymentProcess() {
        debugger
        SetCartjsondata();        
        $("#CartCheckout").submit();
    }
</script>