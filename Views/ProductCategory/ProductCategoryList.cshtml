@model IEnumerable<ECommerceWeb.Models.ProductCategory>  
  
@{  
    ViewData["Title"] = "Home Page";  
}  
  
<h4 class="text-center text-uppercase">List of Product Category</h4>  
  
<p>  
    <a asp-action="ProductCategoryForm" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-plus-circle"></i> Add New</a>  
</p>  
<table class="table table-bordered">  
    <thead>  
        <tr>  
            <th>@Html.DisplayNameFor(model => model.ProductCategoryId)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
        </tr>  
    </thead>  
    <tbody>  
        @foreach (var data in Model)  
        {  
            <tr>
                <td>
                    @data.ProductCategoryId
                </td>
                <td>
                    @data.Name  
                </td>  
                 <td>
                    <a href="@Url.Action("GetProductInfo","ProductCategory", new { proid = @data.ProductCategoryId })">Edit </a> /
                    <button onclick="return confirm('Are you sure you want to delete this Category, By deleting, this related products will also delete?')">
                    <a href="/ProductCategory/DeleteProCategory?productcategoryId=@data.ProductCategoryId">Delete</a>
                    </button>
                </td>
            </tr>  
        }  
    </tbody>  
</table>   

