@model IEnumerable<ECommerceWeb.Models.Products>  
  
@{  
    ViewData["Title"] = "Home Page";  
}  
  
<h4 class="text-center text-uppercase">List of Products</h4>  
  
<p>  
    <a asp-action="ProductForm" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fas fa-plus-circle"></i> Add New</a>  
</p>  
<table class="table table-bordered">  
    <thead>  
        <tr><th>Name</th>   
            <th>Picture</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>  
            <th>@Html.DisplayNameFor(model => model.ProductCategory)</th>  
            <th>Stock</th>  
        </tr>  
    </thead>  
    <tbody>  
        @foreach (var product in Model)  
        {  
            <tr>
                <td>
                    @product.ProductName  
                </td>  

                <td>  
                    <img src="~/images/@product.ProductPicture"   
                         class="rounded-circle"   
                         height="40" width="40"   
                         asp-append-version="true" /> 
                </td>
               
                <td>@product.Price</td>  
                <td>@product.ProductCategory.Name</td> 
                <td>@if(product.InStock){
                        <div>available</div>
                    }
                    else{
                        <div>unavailable</div>
                    }
                    </td>  
                <td>
                    <a href="@Url.Action("GetProductInfo","Product", new { productId = @product.ProductId })">Edit </a> /
                    <a href="/Product/DeleteProduct?productId=@product.ProductId">Delete</a>
                </td>
            </tr>  
        }  
    </tbody>  
</table>   
